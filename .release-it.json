{
  "npm": {
    "publish": false,
    "skipChecks": true
  },
  "git": {
    "commitMessage": "chore(release): ${version}"
  },
  "github": {
    "release": true,
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular"
    },
    "@release-it-plugins/workspaces": {
      "publish": false,
      "workspaces": ["packages/*"],
      "skipChecks": true
    }
  }
}
